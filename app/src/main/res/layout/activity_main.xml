<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAnimais"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#6430B8"

        android:text="Animais"/>


    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/idTabLayout"
        android:layout_below="@+id/txtAnimais"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/idTbItemGatos"
            android:layout_height="wrap_content"
            android:text="Gatos"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/idTbItemCachorros"
            android:layout_height="wrap_content"
            android:text="Cachorros" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/idTbItemPeixes"
            android:layout_height="wrap_content"
            android:text="Peixes" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>