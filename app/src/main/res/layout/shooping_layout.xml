<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingActivity">

    <TextView
        android:id="@+id/txtShopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="Shopping"
        android:textColor="#6430B8"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/idTbLayoutShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtShopping"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemHigiene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higiene" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemaAlimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentação" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemBrinquedos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brinquedos" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemAcessorios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acessórios" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemFarmacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farmácia" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemTransporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transporte" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>